//total combinations that can be used to reach the amount

class Solution {
    public int change(int amount, int[] coins) {
        int dp[] = new int[amount+1];
        dp[0] = 1;
        for(int i=0; i<coins.length; i++)   //coin
        {
            for(int j=1; j<dp.length; j++)  //dp
            {
                if(j-coins[i] >= 0)
                    dp[j] += dp[j-coins[i]];
            }
        }
        return dp[amount];
    }
}