class Solution {
    public boolean backspaceCompare(String s, String t) {
        //replacing # symbol from the string with backspaces
        s = correctString(s);
        t = correctString(t);
        return (s.equals(t));
    }
    
    public String correctString(String str)
    {
        int n=str.length(), count = 0;
        String ans = "";
        for(int i=n-1; i>=0; i--)
        {
            char ch = str.charAt(i);
            if(ch == '#')
                count++;
            else
            {
                if(count>0)
                    count--;
                else
                    ans += ch;
            }
        }
        return ans;
    }
}